<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_house_keeping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/house_keeping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_trip" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_test_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_house_keeping" />

</androidx.constraintlayout.widget.ConstraintLayout>